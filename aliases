# todo.txt
alias t='~/.todo/todo.sh -d ~/.todo/todo.cfg'
alias ta='t a'
alias tn='t view project @next'
alias tw='t view project @waiting && echo "=====  Stalled   =====" && t view project @next @waiting'
alias tah='t view project @next @home'
alias tas='t view project @next @shopping'
alias ts='t view project @shopping'
alias tp='t view project @inprogress'
alias tbi='t bi'
alias context='t @'

# csvfix
alias readtab='csvfix read_dsv -s "\t"'
